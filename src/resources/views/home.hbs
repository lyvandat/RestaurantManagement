
<div class="container pt-4 mt-4">
    <section>
        <div class='row'>
            <div class='col-12 col-md-8'>
                <div id="main-large-banner" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        {{#each large_banner}}
                            {{#if (isFirstVis index)}}
                                <button type="button" data-bs-target="#main-large-banner" data-bs-slide-to={{index}} class="active" aria-current="true"></button>
                            {{else}}
                                <button type="button" data-bs-target="#main-large-banner" data-bs-slide-to={{index}}></button>
                            {{/if}}    
                        {{/each}}
                    </div>
                    <div class="carousel-inner">
                        {{#each large_banner}}
                            {{#if (isFirstVis index)}}
                                <a class="carousel-item active" href={{link}}>
                            {{else}}
                                <a class="carousel-item" href={{link}}>
                            {{/if}}    
                            <img class="d-block w-100" src={{img}} alt="banner"/></a>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class='col-12 col-md-4' id="separate-top-md">
                <div class='row'>
                    <div id="first-small-banner" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            {{#each small_banners_1}}
                                {{#if (isFirstVis index)}}
                                    <button type="button" data-bs-target="#first-small-banner" data-bs-slide-to={{index}} class="active" aria-current="true"></button>
                                {{else}}
                                    <button type="button" data-bs-target="#first-small-banner" data-bs-slide-to={{index}}></button>
                                {{/if}}    
                            {{/each}}
                        </div>
                        <div class="carousel-inner">
                            {{#each small_banners_1}}
                                {{#if (isFirstVis index)}}
                                    <a class="carousel-item active" href={{link}}>
                                {{else}}
                                    <a class="carousel-item" href={{link}}>
                                {{/if}}    
                                <img class="d-block w-100" src={{img}} alt="banner"/></a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class='row pt-2'>
                    <div id="secnd-small-banner" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            {{#each small_banners_2}}
                                {{#if (isFirstVis index)}}
                                    <button type="button" data-bs-target="#secnd-small-banner" data-bs-slide-to={{index}} class="active" aria-current="true"></button>
                                {{else}}
                                    <button type="button" data-bs-target="#secnd-small-banner" data-bs-slide-to={{index}}></button>
                                {{/if}}    
                            {{/each}}
                        </div>
                        <div class="carousel-inner">
                            {{#each small_banners_2}}
                                {{#if (isFirstVis index)}}
                                    <a class="carousel-item active" href={{link}}>
                                {{else}}
                                    <a class="carousel-item" href={{link}}>
                                {{/if}}    
                                <img class="d-block w-100" src={{img}} alt="banner"/></a>  
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="mt-3 bg-white">
        <a class='menu-large-font' href="/products">DANH SÁCH MÓN ĂN</a>
        <div class='row d-flex m-0 pb-2'>
            {{#each recommend}}
                <div class="col-6 col-md-4 col-xl-2 m-auto p-4 large-thumnail">
                    <a href="products/{{slug}}"><img src="images/FoodThumnail/{{photo.[0]}}" class="img-fluid pb-3"></a>
                    <a href="products/{{slug}}" class="erase-underline"><p class="me-title text-lightblue">{{name}}</p></a>
                    <span class="ratings"> 
                        {{#loops fstar}}
                            <i class="bi bi-star-fill rating-color"></i>
                        {{/loops}}
                        {{#loops hstar}}
                            <i class="bi bi-star-half rating-color"></i>
                        {{/loops}}
                        {{#loops nstar}}
                            <i class="bi bi-star"></i>
                        {{/loops}}
                    </span>
                    <p class="review-count">{{rvcount}}</p>
                    <p class="sm-title">1 offer from <span class="rtab-money">{{{toPrice price}}} VNĐ</span></p>
                </div>
            {{/each}}
        </div>
    </div>
